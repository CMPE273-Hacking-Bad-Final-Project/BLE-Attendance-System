<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.ishanvadwala.assignment3.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        >
    </LinearLayout>
    <android.support.v7.widget.CardView
    android:foregroundGravity="center_horizontal"
    android:layout_width="350dp"
    android:background="#ffffff"
    android:layout_height="400dp"
    android:layout_marginTop="120dp"
    android:layout_marginLeft="30dp"
    app:cardElevation="200dp"
    app:contentPadding="10dp"
    android:elevation="10dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/Logo"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:background="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            ></ImageView>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="300dp"
            android:maxLength="9"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Logo"
            android:hint="Student Id"
            android:textStyle="normal"
            app:met_iconLeft="@drawable/ic_acc"
            app:met_floatingLabelText="Student Id"
            android:numeric="integer"
            app:met_maxCharacters="9"
            app:met_floatingLabel="highlight"
            android:id="@+id/StudentId"
            android:layout_centerHorizontal="true"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="300dp"
                android:maxLength="9"
                android:layout_height="wrap_content"
                android:layout_below="@+id/StudentId"
                android:hint="Password"
                android:password="true"
                android:textStyle="normal"
                app:met_iconLeft="@drawable/ic_phonelink_lock_white_24dp"
                app:met_floatingLabelText="Password"
                app:met_maxCharacters="12"
                android:singleLine="true"
                app:met_floatingLabel="highlight"
                android:id="@+id/StudentPass"
                android:layout_centerHorizontal="true"/>
    <Button
        android:layout_below="@+id/StudentPass"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Register"
        android:textColor="@color/cardview_light_background"
        android:background="@color/colorPrimary"
        android:id="@+id/Register" />

        </RelativeLayout>
</android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></LinearLayout>

</android.support.design.widget.CoordinatorLayout>
